{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,          // تفعيل إنشاء ملفات .d.ts 
    "sourceMap": true,
    "lib": ["dom", "es2016"],
    "removeComments": true,
    "noEmitOnError": true,
    "outDir": "./dist",
    "rootDir": "./lib",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["./lib/**/*"],
  "exclude": ["node_modules"]
}
